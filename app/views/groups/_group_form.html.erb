<%= form_for  Group.new, :url => {:action => "create" }, :method => :post do |f| %>
  <div class="form-field">
    <%= f.label :name, "Group Name:"%> </br> 
    <%= f.text_field :name, :required => true %>
  </div>
  <div class="form-field">
    <%= f.label :description, "Group Description:" %> </br> 
    <%= f.text_area :description, :maxlength => 300 %>
  </div>
  <%# Include friends dropdown here %>
  <%= f.submit "Create Group!", class: "btn btn-success" %>
<% end %>