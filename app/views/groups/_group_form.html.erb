<%= form_for Group.new, :url => create_group_path(@group), :method => :post do |f| %>
  <div class="form-field">
    <%= f.label :name, "Group Name:"%> </br> 
    <%= f.text_field :name %>
  </div>
  <div class="form-field">
    <%= f.label :description, "Group Description:" %> </br> 
    <%= f.text_area :description %>
  </div>
  <%# Include friends dropdown here %>
  <%= f.submit "Create Group!", class: "btn btn-success" %>
<% end %>